ACTOR ICD_TranceColumn : ICD_ObjectTemplate replaces TechPillar
{
	Radius 16
	Height 128
	States
	{
		Spawn:
			ELEC A 310 NoDelay A_PlaySound("world/ambient/tech")
			ELEC A 1
			Loop
	}
}

ACTOR ICD_Small_Bollard_Lamp replaces Column
{
	Radius 16
	Height 58
	Health 30
	Mass 0x7FFFFFFF
	DeathHeight 58
	+SOLID
	+SHOOTABLE
	+NOBLOOD
	States
	{
		Spawn:
			COLU A 2 Light("ICD_YellowLamp") Bright
			COLU A 52 Light("ICD_YellowLamp") Bright A_PlaySound("world/ambient/yellowlamp", CHAN_BODY, 1, 1)
			COLU A 2 Light("ICD_YellowLamp") Bright
			Loop
		Death:
			TNT1 A 0 A_StopSound(CHAN_BODY)
			TNT1 A 0 A_PlaySound("world/ambient/bust")
			TNT1 A 0 A_ChangeFlag("SHOOTABLE", 1)
			LAMP A 2
			TNT1 A 0 A_SpawnItemEx("ICD_Lamp_Smoke_Spawn",0,0,46,0,0,0,0,SXF_NOCHECKPOSITION)
			LAMP A 100 A_Jump(90, "True.Dead")
			Goto Death+2
		True.Dead:
			LAMP A -1
	}
}

