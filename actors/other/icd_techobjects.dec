ACTOR ICD_Lamp_Smoke_Spawn
{
	Radius 13
	Height 8
	+NOINTERACTION
	States
	{
		Spawn:
			SMK2 A 4 NoDelay A_SpawnItemEx("ICD_Sparks",random(-5,5),random(-5,5),random(-5,5),0,0,0,0,SXF_NOCHECKPOSITION)
			SMK2 BCDE 4
			Stop
	}
}

ACTOR ICD_Sparks
{
	Radius 8
	Height 16
	+NOINTERACTION
	States
	{
		Spawn:
			SPUF A 2 Bright
			SPUF B 2 Bright A_PlaySound("world/ambient/spark")
			SPUF C 2 Bright A_Explode(20,32)
			SPUF D 2 Bright
			Stop
	}
}
